    }

    abstract class DoorState {
    # door : Door
    # name : String
    + DoorStates(Door : door)
    + {abstract} open()
    + {abstract} close()
    + {abstract} lock()
    + {abstract} unlock()
    + {abstract} unlock_shortly()
    }

    class Unlocked extends DoorState {
    +Unlocked(Door : door)
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }

    class Locked extends DoorState {
    + Locked(Door : door)
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }

    class UnlockedShortly extends DoorState implements Observer {
    - {static} MAX_TIME : int
    - {static} clock : Clock
    - timeUnlocked : LocalDateTime
    + UnlockedShortly(Door : door)
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    + update(o : Observable, arg : Object)
    }

    class Propped extends DoorState  {
    + Propped(Door : door)
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }

    class Clock implements Observable {
    - date : LocalDateTime
    - timer : Timer
    - period : int
    + Clock(period : int)

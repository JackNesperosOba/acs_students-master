    class States {
    {static} LOCKED : String
    {static} UNLOCKED : String
    {static} UNLOCKED_SHORTLY : String
    {static} PROPPED : String
    }

    class Actions {
    + {static} LOCK : String
    + {static} UNLOCK : String
    + {static} UNLOCK_SHORTLY : String
    + {static} PROPPED : String
    + {static} OPEN : String
